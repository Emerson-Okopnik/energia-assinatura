APP_NAME=EnergiaAssinatura
APP_ENV=production
APP_KEY={{ app_key | default('', true) }}
APP_DEBUG=false
APP_URL=https://{{ api_domain }}

LOG_CHANNEL=stack
LOG_LEVEL=info

DB_CONNECTION=pgsql
DB_HOST={{ db_host }}
DB_PORT={{ db_port }}
DB_DATABASE={{ db_name }}
DB_USERNAME={{ db_username }}
DB_PASSWORD={{ db_password }}
DB_PREPARED_STATEMENTS=false

SESSION_DRIVER=database
SESSION_LIFETIME=120
QUEUE_CONNECTION={{ queue_connection }}
DB_QUEUE_CONNECTION=pgsql
DB_QUEUE_RETRY_AFTER=120
CACHE_STORE=database

JWT_SECRET={{ jwt_secret | default('', true) }}
BROWSERSHOT_CHROME_PATH={{ browsershot_chrome_path }}
BROWSERSHOT_NODE_PATH={{ browsershot_node_path }}
BROWSERSHOT_DISABLE_SANDBOX={{ browsershot_disable_sandbox | ternary('true', 'false') }}